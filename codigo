    mujer.mouseenter(function(){
        $(".mujer").animate({
            height: '450px',
            width: '450px'
        }, 100);
        $(".hombre").animate({
            height: "350px",
            width:"350px"

        }, 100);


    });

    mujer.mouseleave(function(){
        $(".mujer").animate({
            height: '400px',
            width: '400px'
        }, 100);
        $(".hombre").animate({
            height: "400px",
            width:"400px"

        }, 100);
    });

    hombre.mouseenter(function(){
        $(".hombre").animate({
            height: '450px',
            width: '450px'
        }, 100);
        $(".mujer").animate({
            height: "350px",
            width:"350px"

        }, 100);


    });

    hombre.mouseleave(function(){
        $(".hombre").animate({
            height: '400px',
            width: '400px'
        }, 100);
        $(".mujer").animate({
            height: "400px",
            width:"400px"

        }, 100);       

    });




    div{
    display: block;
    position: absolute;
    margin: 0px auto;
}

